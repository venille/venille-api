{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
   "account-service": {
      "type": "library",
      "root": "libs/account-service",
      "entryFile": "index",
      "sourceRoot": "libs/account-service/src",
      "compilerOptions": {
        "tsConfigPath": "libs/account-service/tsconfig.lib.json"
      }
    },
    "auth-service": {
      "type": "library",
      "root": "libs/auth-service",
      "entryFile": "index",
      "sourceRoot": "libs/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth-service/tsconfig.lib.json"
      }
    }
  }
}
